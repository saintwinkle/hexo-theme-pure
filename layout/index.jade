doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{theme.title}
    !=css("pure-min.css")
    !=css("grids-responsive-min.css")
    !=css("blog.css")
  body
    #layout.pure-g
      .sidebar.pure-u-1.pure-u-md-1-4
        .header
          h1.brand-title #{theme.title}
          h2.brand-tagline #{theme.description}
          nav.nav
            ul.nav-list
              li.nav-item
                a.pure-button(href="http://purecss.io") Pure
              li.nav-item
                a.pure-button(href="http://yuilibrary.com") YUI Library
      .content.pure-u-1.pure-u-md-3-4
        div
          .posts
            - page.posts.each(function (post) {
                section.post
                  header.post-header
                    img.post-avatar(height="48" width="48" src!=gravatar(theme.email, 48))
                    h2.post-title #{post.title}
                    p.post-meta
                      span.post-author
                        i.icon-user
                        | #{theme.author}
                      span.post-date
                        i.icon-clock
                        | #{date(post.date, 'YYYY-MM-DD HH:mm')}
                      if (post.categories && post.categories.length)
                        span.post-categories
                          i.icon-book
                          - post.categories.each(function (category) {
                              a.post-category(href=category.path) #{category.name}
                          - })
                      if (post.tags && post.tags.length)
                        span.post-tags
                          i.icon-tags
                          - post.tags.each(function (tag) {
                              a.post-tag(href=tag.path) #{tag.name}
                          - })
                  .post-description
                    !=post.content
            - })
          .footer
            .pure-menu.pure-menu-horizontal.pure-menu-open
              ul
                li
                  a(href="http://purecss.io/") About
                li
                  a(href="http://twitter.com/yuilibrary/") Twitter
                li
                  a(href="http://github.com/yahoo/pure/") GitHub
    script.
      var tables = document.querySelectorAll('.post-description > table')
      for (var i = 0; i < tables.length; i++) {
        tables[i].setAttribute('class','pure-table pure-table-bordered')
      }
      var imgs = document.querySelectorAll('.post-description img')
      for (var i = 0; i < imgs.length; i++) {
        imgs[i].setAttribute('class','pure-img')
      }
