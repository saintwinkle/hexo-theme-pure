if pagination == 2
  - page.posts.each(function (post) {
      !=partial('article', {post: post, index: true})
  - })
else
  - var last
  - page.posts.each(function (post) {
      - var year = post.date.year()
      if last != year
        if last != null
        - last = year
        h1.archive-year
          a(href!=url_for('archives/' + year))
            =year
      .archive-post
        !=partial('archive-post', {post: post})
  - })
if page.total > 1
  nav#page-nav
    !=paginator({prev_text: '&laquo; Prev', next_text: 'Next &raquo;'})
